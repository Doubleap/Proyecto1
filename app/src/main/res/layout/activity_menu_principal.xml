<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:background="@color/colorDarkGrey"
    tools:context=".MenuPrincipalActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dip"
    android:orientation="horizontal"
    android:layout_weight="1">
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/button_campeones"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        android:background="@color/colorWhite"
        android:layout_margin="5dp"
        android:text="Campeones"
        android:textAlignment="gravity"
        android:textStyle="normal"
        android:textSize="16dp"
        android:layout_gravity="bottom"

        android:paddingTop="15dp"
        android:textColor="@color/colorBlack"
        />
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/button_items"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        android:background="@color/colorWhite"
        android:layout_margin="5dp"
        android:text="Articulos"
        android:textAlignment="gravity"

        android:paddingTop="15dp"
        android:textStyle="normal"
        android:textSize="16dp"
        android:textColor="@color/colorBlack"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="1">
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button_runas"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp"
            android:background="@color/colorWhite"
            android:layout_margin="5dp"
            android:text="Runas"
            android:textAlignment="gravity"

        android:paddingTop="15dp"
        android:textStyle="normal"
        android:textSize="16dp"
        android:textColor="@color/colorBlack"
        />
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/button_maestrias"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        android:background="@color/colorWhite"
        android:layout_margin="5dp"
        android:text="Maestrias"
        android:textAlignment="gravity"

        android:paddingTop="15dp"
        android:textStyle="normal"
        android:textSize="16dp"
        android:textColor="@color/colorBlack"
        />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dip"
    android:orientation="horizontal"
    android:layout_weight="1">
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/button_ranking"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        android:background="@color/colorWhite"
        android:layout_margin="5dp"
        android:text="Ranking"
        android:textAlignment="gravity"
    android:paddingTop="15dp"
    android:textStyle="normal"
    android:textSize="16dp"
    android:textColor="@color/colorBlack"
    />
<android.support.v7.widget.AppCompatButton
    android:id="@+id/button_partidas"
    android:layout_width="0dip"
    android:layout_height="match_parent"
    android:layout_weight="1"
    tools:layout_editor_absoluteX="16dp"
    tools:layout_editor_absoluteY="16dp"
    android:background="@color/colorWhite"
    android:layout_margin="5dp"
    android:text="Partida"
    android:textAlignment="gravity"
    android:paddingTop="15dp"
    android:textStyle="normal"
    android:textSize="16dp"
    android:textColor="@color/colorBlack"
    />
</LinearLayout>
</LinearLayout>